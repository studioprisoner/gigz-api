{
	"name": "gigz-api",
	"version": "1.0.0",
	"module": "src/index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun run --watch src/index.ts",
		"start": "bun run src/index.ts",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"migrate": "bun run migrations/migrate-from-supabase.ts",
		"migrate-prod": "bun run migrations/production-migration.ts",
		"migrate-missing": "bun run migrations/migrate-missing-concerts.ts",
		"migrate-event-centric": "bun run migrations/event-centric-migration.ts",
		"migrate-single-user": "bun run migrations/migrate-single-user.ts",
		"migrate-photos": "bun run migrations/migrate-photos-to-r2.ts",
		"validate": "bun run migrations/validate-migration.ts",
		"link-apple": "bun run migrations/link-apple-auth.ts"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.970.0",
		"@aws-sdk/s3-request-presigner": "^3.970.0",
		"@parse/s3-files-adapter": "^4.2.0",
		"@supabase/supabase-js": "^2.93.2",
		"@types/pg": "^8.16.0",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"parse": "^8.0.3",
		"parse-server": "^9.1.1",
		"parse-server-resend-adapter": "^1.0.0",
		"pg": "^8.17.2",
		"postgres": "^3.4.8",
		"resend": "^6.8.0",
		"slugify": "^1.6.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "latest",
		"@types/express": "^5.0.6",
		"@types/node": "^25.0.9",
		"@types/parse": "^6.1.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
